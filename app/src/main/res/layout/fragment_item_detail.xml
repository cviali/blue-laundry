<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#87B2BD">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#716658"
        android:orientation="vertical">
        <Button
            android:id="@+id/button_back"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:drawable/ic_media_previous"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#4C3F31"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/outers"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/layout_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_item_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Outers"
                        android:textStyle="bold"
                        android:textSize="24dp"
                        android:textColor="@android:color/white"/>
                    <TextView
                        android:id="@+id/text_item_tags"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="11dp"
                        android:text="Parka, Jacket, Sweater, Cardigan, Coat"
                        android:textColor="#B79E77"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_item_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="22dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:text="Jadikan pakaian luaranmu membuatmu untuk selalu nyaman dan ada ketika kamu butuhkan. Jauhi noda bandel yang dapat merusak luaranmu"
                        android:textColor="#FDFBEE"
                        android:textSize="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:id="@+id/text_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price : Rp. 30.000 / Pcs"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@android:color/white"
                    android:fontFamily="monospace"/>

                <EditText
                    android:id="@+id/input_qty"
                    android:layout_width="200dp"
                    android:textAlignment="center"
                    android:layout_marginBottom="60dp"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:hint="Quantity"/>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/button_submit"
            android:background="@drawable/circle_button"
            android:layout_gravity="center"
            android:text="submit"
            android:layout_marginTop="8dp"
            android:textSize="12dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
    </LinearLayout>

</LinearLayout>